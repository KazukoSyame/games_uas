{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node", "config": { "includeFiles": ["db.json"] } },
    { "src": "index.html", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
